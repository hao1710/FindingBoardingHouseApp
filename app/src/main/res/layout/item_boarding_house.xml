        android:orientation="vertical">

        <TextView
            android:id="@+id/item_bh_name_boarding_house"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="fill"
            android:text="Name"
            android:textColor="@color/black"
