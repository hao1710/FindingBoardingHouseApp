<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.AccountSettingActivity"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/custom_background_title"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:text="Thông tin"
            android:textColor="@color/white"
            android:textSize="20sp" />
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_margin="8dp">
        <TextView
            android:id="@+id/as_name_landlord"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Tên chủ trọ"
            android:gravity="center_vertical"/>
        <TextView
            android:id="@+id/as_address_landlord"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Địa chỉ"
            android:gravity="center_vertical"/>
        <TextView
            android:id="@+id/as_phoneNumber_landlord"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="SĐT"
            android:gravity="center_vertical"/>
        <TextView
            android:id="@+id/as_email_landlord"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Email"
            android:gravity="center_vertical"/>
        <TextView
            android:id="@+id/as_password_landlord"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Mật khẩu"
            android:gravity="center_vertical"/>
    </LinearLayout>

</LinearLayout>