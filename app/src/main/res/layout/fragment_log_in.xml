<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green"
    android:orientation="vertical"
    android:weightSum="100"
    tools:context=".Activity.LogInFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="25"
        android:gravity="center"
        android:orientation="vertical">
        <!--        <ImageView-->
        <!--            android:layout_width="200dp"-->
        <!--            android:layout_height="100dp"-->
        <!--            android:src="@drawable/logob">-->
        <!--        </ImageView>-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="@string/app_name"
            android:textColor="#fff"
            android:textSize="30sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="75"
        android:background="@drawable/custom_bg_2"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/custom_edit_text_all"
            android:gravity="center">

            <EditText
                android:id="@+id/li_editText_email"
                android:layout_width="290dp"
                android:layout_height="match_parent"
                android:background="@null"
                android:hint="Email"
                android:padding="10dp"
                android:text="anhhaovo1710@gmail.com"
                android:autofillHints=""
                android:inputType="textEmailAddress" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/custom_edit_text_all"
            android:gravity="center">

            <EditText
                android:id="@+id/li_editText_password"
                android:layout_width="290dp"
                android:layout_height="match_parent"
                android:background="@null"
                android:hint="Mật khẩu"
                android:inputType="textPassword"
                android:padding="10dp"
                android:text="haohao989898" />

        </LinearLayout>


        <Button
            android:id="@+id/li_btn_login"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:backgroundTint="@color/green"
            android:text="Đăng nhập" />

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"

            android:gravity="center">

            <TextView
                android:id="@+id/li_edt_create"
                android:textColor="@color/green"
                android:gravity="center"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:textStyle=""
               />
            <!--            <EditText-->
            <!--                android:id="@+id/li_editText_"-->
            <!--                android:layout_width="290dp"-->
            <!--                android:layout_height="match_parent"-->
            <!--                android:background="@null"-->
            <!--                android:hint="Mật khẩu"-->
            <!--                android:inputType="textPassword"-->
            <!--                android:padding="10dp"-->
            <!--                android:text="haohao989898" />-->

        </LinearLayout>

    </LinearLayout>

</LinearLayout>