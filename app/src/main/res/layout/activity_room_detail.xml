<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/backgroundColor"
    tools:context=".Activity.RoomDetailActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:gravity="center"
                android:orientation="vertical">
                <!--                <com.stfalcon.multiimageview.MultiImageView-->
                <!--                    android:id="@+id/rd_image_room"-->
                <!--                    android:layout_width="match_parent"-->
                <!--                    android:layout_height="200dp"/>-->
                <ImageView
                    android:id="@+id/rd_image_room"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="TODO"

                    android:src="@drawable/ic_app" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/custom_background_white"
                android:orientation="vertical"
                android:paddingStart="8dp"
                android:paddingEnd="8dp">

                <TextView
                    android:id="@+id/rd_description_room"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:minHeight="60dp"
                    android:text="Mô tả phòng"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    tools:ignore="RtlSymmetry" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/black">

                </LinearLayout>

                <TextView
                    android:id="@+id/rd_name_boarding_house"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"

                    android:text="Name Boarding House"
                    android:textColor="@color/black"
                    android:textSize="20sp" />


                <TextView
                    android:id="@+id/rd_address_boarding_house"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:minHeight="40dp"
                    android:text="Address"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/rd_textView_view_map"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Xem map"
                    android:textColor="@color/blue" />


                <LinearLayout
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/black">

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:baselineAligned="false"
                    android:weightSum="3">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:text="Diện tích" />

                        <TextView
                            android:id="@+id/rd_area_room"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:gravity="center_vertical"
                            android:text="12 m2" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:text="Giá" />

                        <TextView
                            android:id="@+id/rd_price_room"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:gravity="center_vertical"
                            android:text="1 triệu đồng" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:text="Số người ở" />

                        <TextView
                            android:id="@+id/rd_number_people"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:gravity="center_vertical"
                            android:text="4 người" />
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/black">

                </LinearLayout>

                <TextView
                    android:id="@+id/rd_textView_description_bh"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:minHeight="40dp"
                    android:text="Mô tả trọ" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/black" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                 
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:text="Tiện nghi"
                        android:gravity="center_vertical"/>

                    <androidx.recyclerview.widget.RecyclerView

                        android:id="@+id/rd_recyclerView_facility"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="vertical"
                android:paddingStart="8dp"
                android:background="@drawable/custom_background_white"
                android:minHeight="300dp"
                android:paddingEnd="8dp"
                tools:ignore="RtlSymmetry">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                   >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:gravity="center_vertical"
                        android:text="Bình luận"
                        android:textSize="20sp" />

                    <ImageButton
                        android:id="@+id/rd_imageButton_create_comment"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/ic_add_comment"
                        android:contentDescription="TODO" />
                </RelativeLayout>

                <com.github.aakira.expandablelayout.ExpandableLinearLayout

                    android:id="@+id/rd_expand_layout_comment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:ael_expanded="false">

                    <EditText
                        android:id="@+id/rd_editText_name"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_above="@+id/rd_editText_content"
                        android:hint="Tên của bạn" />

                    <EditText
                        android:id="@+id/rd_editText_content"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:hint="Nội dung" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"

                        android:orientation="horizontal">

                        <Button

                            android:id="@+id/rd_button_create_comment"
                            android:layout_width="100dp"
                            android:layout_height="40dp"
                            android:layout_marginRight="75dp"
                            android:backgroundTint="@color/green"
                            android:text="Tạo" />

                        <Button

                            android:id="@+id/rd_button_cancel_comment"
                            android:layout_width="100dp"
                            android:layout_height="40dp"
                            android:backgroundTint="@color/green"
                            android:text="Hủy" />
                    </LinearLayout>
                </com.github.aakira.expandablelayout.ExpandableLinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerViewComment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:minHeight="200dp" />
            </LinearLayout>
        </LinearLayout>


    </ScrollView>
</LinearLayout>