<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/custom_item_recyclerview"
        android:orientation="horizontal"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/rr_image_room"
                android:layout_margin="2dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:src="@drawable/ic_app"
                android:contentDescription="@string/TODO"/>

        </LinearLayout>
        <LinearLayout
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:gravity="center|left"
            android:orientation="vertical"
            android:textAlignment="gravity"
            tools:ignore="RtlHardcoded">

            <TextView
                android:id="@+id/rr_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical"
                android:minHeight="40dp"
                android:text="@string/description" />

            <TextView
                android:layout_height="30dp"
                android:id="@+id/rr_name_boarding_house"
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:text="@string/name"
                app:drawableLeftCompat="@drawable/ic_location_on" />

            <TextView
                android:layout_marginStart="24dp"
                android:id="@+id/rr_address_boarding_house"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="@string/address" />

            <TextView
                android:id="@+id/rr_price_room"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginBottom="16dp"
                android:gravity="center_vertical"
                android:text="@string/price"
                app:drawableLeftCompat="@drawable/ic_attach_money" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>